<Window x:Class="GetRush.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetRush"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Get Rush!" Height="350" Width="525">
    <Grid Margin="7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" x:Name="LastUpdateTextBlock" Text="Last Podcast Update: 12:00 pm on Mon Jun 19, 2017"/>
            <TextBox Grid.Row="1" Margin="0,5,0,0" x:Name="UpdateStatusTextBox" IsReadOnly="True" Height="75" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" BorderThickness="0"/>
        </Grid>
        <Grid Grid.Row="2">
            <Button x:Name="SettingsButton" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="SettingsButton_Click">
                <Image Source="Images/Settings_32x.png" Width="32"/>
            </Button>
        </Grid>
        <Grid Grid.Row="0" Grid.RowSpan="3">
            <Button x:Name="GetFeedButton" Content="Get Feed" Click="GetFeedButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="60" FontSize="18" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>
